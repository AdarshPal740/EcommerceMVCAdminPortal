        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.Image))
                    {
                        <img src="~/images/@product.Image" alt="@product.Name" style="width: 100px;" />
                    }
                </td>
                <td>@product.Category</td>
                <td>@product.Brand</td>
                <td>
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-controller="Admin" asp-action="Delete" asp-route-id="@product.Id" onclick="return confirm('Are you sure you want to delete this product?')">Remove</a>
                </td>
            </tr>
        }

        
